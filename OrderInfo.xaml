<Page x:Class="Task4_2.OrderInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task4_2"
      mc:Ignorable="d" 
      Title="OrderInfo">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <Label Content="Покупатель" Padding="5"/>
            <TextBox Name="buyer" MinWidth="100" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Label Content="Товары" Padding="5"/>
            <ListView Name="items" MinWidth="100" MinHeight="50" HorizontalAlignment="Stretch"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Общая стоимость" Padding="5"/>
            <TextBlock MinWidth="100" Name="total_value" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Дата заказа" Padding="5"/>
            <DatePicker MinWidth="150" Name="date" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </StackPanel>
</Page>
