<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabControl_SelectionChanged" Name="TabControl">
        <TabItem Header="Заказы" Name="OrdersButton">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.3*"/>
                </Grid.RowDefinitions>
                <Frame NavigationUIVisibility="Hidden" Name="OrdersFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"/>
                <Frame NavigationUIVisibility="Hidden" Name="OrdersInfo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
            </Grid>
        </TabItem>
        <TabItem Header="Покупатели" Name="BuyersButton">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1.3*"/>
                </Grid.RowDefinitions>
                <Frame NavigationUIVisibility="Hidden" Name="BuyersFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"/>
                <Frame NavigationUIVisibility="Hidden" Name="BuyersInfo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
            </Grid>
        </TabItem>
        <TabItem Header="Продукты" Name="ItemsButton">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.3*"/>
            </Grid.RowDefinitions>
                <Frame NavigationUIVisibility="Hidden" Name="ItemsFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"/>
                <Frame NavigationUIVisibility="Hidden" Name="ItemsInfo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"/>
            </Grid>
        </TabItem>
    </TabControl>

</Window>
