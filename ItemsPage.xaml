<Page x:Class="Task4.ItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemsPage">

    <ListView x:Name="listView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ListView.View>
            <GridView>
                <GridViewColumn Width="50" Header="ID" DisplayMemberBinding="{Binding id}"/>
                <GridViewColumn Width="150" Header="Название" DisplayMemberBinding="{Binding name}"/>
                <GridViewColumn Width="100" Header="Стоимость" DisplayMemberBinding="{Binding value}"/>
                <GridViewColumn Width="100" Header="Описание" DisplayMemberBinding="{Binding description}"/>
                <GridViewColumn Width="100" Header="Доставка" DisplayMemberBinding="{Binding check}"/>
            </GridView>
        </ListView.View>
    </ListView>
</Page>
